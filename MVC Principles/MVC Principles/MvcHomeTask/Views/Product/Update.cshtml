@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MvcHomeTaskLibrary.Models.ProductForUpdate

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update Product</h1>

<fieldset>
    <form asp-action="Update" asp-controller="Product">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <input type="hidden" asp-for="ProductId" />

                    <div asp-validation-summary="ModelOnly" class="input-validation-error"></div>

                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categories" class="form-label"></label>
                        @Html.DropDownListFor(
                                 x => x.CategoryId,
                                 new SelectList(Model.Categories, "CategoryId", "CategoryName"),
                                 new { @class = "form-control" }
                                 )
                        <span asp-validation-for="Categories" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Suppliers" class="form-label"></label>
                        @Html.DropDownListFor(
                                 x => x.SupplierId,
                                 new SelectList(Model.Suppliers, "SupplierId", "CompanyName"),
                                 new { @class = "form-control" }
                                 )
                        <span asp-validation-for="Suppliers" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UnitPrice" class="form-label"></label>
                        <input asp-for="UnitPrice" class="form-control" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="QuantityPerUnit" class="form-label"></label>
                        <input asp-for="QuantityPerUnit" class="form-control" />
                        <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UnitsInStock" class="form-label"></label>
                        <input asp-for="UnitsInStock" class="form-control" />
                        <span asp-validation-for="UnitsInStock" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReorderLevel" class="form-label"></label>
                        <input asp-for="ReorderLevel" class="form-control" />
                        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Discontinued" class="form-label"></label>
                        @Html.DropDownListFor(
                                 model => model.Discontinued,
                                 new SelectList(Enum.GetValues(typeof(Discontinued))),
                                 new { @class = "form-control" }
                                 )
                        <span asp-validation-for="Discontinued" class="text-danger"></span>
                    </div>


                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </div>

@*                     <div asp-validation-summary="ModelOnly" class="text-danger"></div> *@
                </div>
            </div>
        </div>
    </form>
</fieldset>



