@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MvcHomeTaskLibrary.Models.ProductForUpdate

@{
    ViewData["Title"] = "Display";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Display Product</h1>

<fieldset>
    <form asp-action="Display" asp-controller="Product">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Categories" class="form-label"></label>
                        @Html.DropDownListFor(
                                 x => x.CategoryId,
                                 new SelectList(Model.Categories, "CategoryId", "CategoryName"),
                                 new { @class = "form-control" }
                                 )
                    </div>

                    <div class="mb-3">
                        <label asp-for="Suppliers" class="form-label"></label>
                        @Html.DropDownListFor(
                                 x => x.SupplierId,
                                 new SelectList(Model.Suppliers, "SupplierId", "CompanyName"),
                                 new { @class = "form-control" }
                                 )
                    </div>

                    <div class="mb-3">
                        <label asp-for="UnitPrice" class="form-label"></label>
                        <input asp-for="UnitPrice" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="QuantityPerUnit" class="form-label"></label>
                        <input asp-for="QuantityPerUnit" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="UnitsInStock" class="form-label"></label>
                        <input asp-for="UnitsInStock" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ReorderLevel" class="form-label"></label>
                        <input asp-for="ReorderLevel" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Discontinued" class="form-label"></label>
                        @Html.DropDownListFor(
                                 model => model.Discontinued,
                                 new SelectList(Enum.GetValues(typeof(Discontinued))),
                                 new { @class = "form-control" }
                                 )
                    </div>

                </div>
            </div>
        </div>
    </form>
</fieldset>



